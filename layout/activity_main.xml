<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".MainActivity">


    <!-- Logo - Pizza -->

    <ImageView
        android:id="@+id/logo_pizza"
        android:layout_width="match_parent"
        android:layout_height="249dp"
        android:src="@drawable/logo_pizza"
        android:scaleType="fitCenter"/>


    <!-- Texto: Pizzaria -->

    <TextView
        android:id="@+id/textTitulo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pizzaria"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textColor="#FF0000" />

    <!-- Descrição  -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha o(s) tipo(s) de Pizza:"
        android:textSize="19sp"
        android:fontFamily="monospace"
        android:textStyle="bold"/>

    <!-- CheckBox - Pizza Calabresa -->

    <CheckBox android:id="@+id/cbCalabresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:textSize="18sp"
        android:text="Calabresa"/>

    <!-- CheckBox - Pizza Marguerita -->

    <CheckBox
        android:id="@+id/cbMarguerita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="Marguerita"/>

    <!-- CheckBox - Pizza Portuguesa -->

    <CheckBox
        android:id="@+id/cbPortuguesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="Portuguesa"/>

    <!--Botão - Avançar(Fazer Pedido) -->

    <Button
        android:id="@+id/btnT1Set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF0000"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize = "22dp"
        android:onClick="enviar"
        android:text="Fazer Pedido" />
</LinearLayout>
